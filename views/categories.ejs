<!DOCTYPE html>
<html>
  <head>
    <%- include ("./partials/_head"), {title}; %>
    <link rel="stylesheet" href="/stylesheets/categories.css" />
  </head>
  <body>
    <header><%- include ("./partials/_header"); %></header>
    <main>
      <div class="main-header">
        <h1 class="category-title">Categories</h1>
        <button id="new-category-button">New Category</button>
      </div>
      <ul class="category-list">
        <% categories.forEach(function(category) { %>
        <li class="category">
          <h2 class="category-name"><%= category.name %></h2>
          <p class="category-description"><%= category.description %></p>
        </li>
        <% });%>
      </ul>
    </main>
    <footer><%- include ("./partials/_footer"); %></footer>
    <!-- Modal -->
    <div class="overlay" style="display: none">
      <div id="new-category" class="modal">
        <form action="/categories" method="post">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required />
          <label for="description">Description:</label>
          <input type="text" id="description" name="description" />
          <input type="submit" value="Create Category" />
        </form>
      </div>
    </div>
    <!-- End Modal -->
    <script>
      const newCategoryButton = document.getElementById("new-category-button");
      const overlay = document.querySelector(".overlay");
      const modal = document.getElementById("new-category");
      const openModal = () => {
        overlay.style.display = "block";
      };
      const closeModal = () => {
        overlay.style.display = "none";
      };
      newCategoryButton.addEventListener("click", openModal);
      overlay.addEventListener("click", closeModal);
      modal.addEventListener("click", (event) => {
        event.stopPropagation();
      });
    </script>
  </body>
</html>
